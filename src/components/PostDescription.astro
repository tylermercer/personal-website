---
import renderInlineMarkdown from "../utils/renderInlineMarkdown";

export type Props = {
    class?: string;
    description: string;
};

const { class: className, description, ...rest } = Astro.props;
---

<p
    class:list={["post-description", className]}
    set:html={renderInlineMarkdown(description)}
    {...rest}
/>

<style>
    .post-description {
        font-weight: 300;
        line-height: 1.3;
        font-size: 1.65em;
        margin-top: 1.6rem;
        margin-bottom: 1.6rem;
        color: var(--color-gray-11);
    }
</style>
