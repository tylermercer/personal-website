---
import { trimTrailingSlash } from "../utils/utils";
import Logo from "./Logo.astro"

const isCurrent = (path: string) => trimTrailingSlash(Astro.url.pathname) === path;
---
<header class="site-nav-container">
    <div class="guttered">
        <nav>
            <a class="skip-to-content-link" href="#main">Skip to Content</a>
            <a class="logo-link" aria-label="Home" href="/">
                <Logo/>
            </a>
            <ul>
                <li>
                    <a class="nav-link" aria-current={isCurrent('/now') ? 'page' : undefined} href="/now">
                        <span class="text">
                            Now
                        </span>
                    </a>
                </li>
                <li>
                    <a class="nav-link" aria-current={isCurrent('/about') ? 'page' : undefined} href="/about">
                        <span class="text">
                            About
                        </span>
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</header>