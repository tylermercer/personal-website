---
import trimTrailingSlash from "../utils/trimTrailingSlash";
import Logo from "./Logo.astro";

const patternClass = "";

const isCurrent = (path: string) =>
  trimTrailingSlash(Astro.url.pathname) === path ? "page" : undefined;
---

<header class="site-nav-container u-guttered">
  <nav class:list={["u-pattern", patternClass]}>
    <a class="skip-to-content-link" href="#main">Skip to Content</a>
    <a class="logo-link" aria-label="Home" href="/">
      <Logo />
    </a>
    <ul>
      <li>
        <a class="nav-link" aria-current={isCurrent("/now")} href="/now">
          <span class="text"> Now</span>
        </a>
      </li>
      <li>
        <a class="nav-link" aria-current={isCurrent("/about")} href="/about">
          <span class="text"> About</span>
        </a>
      </li>
    </ul>
  </nav>
</header>
<style lang="scss">
  .site-nav-container {
    --u-guttered-content-width: 60rem;
    // border-bottom: 1px solid var(--color-gray-8);
    & nav {
      &.u-pattern {
        background-position: bottom;
      }
      display: flex;
      padding: 0;
      align-items: stretch;
      height: 58px;

      ul {
        //Occlude pattern shown on nav element so that it only shows on the logo
        background-color: var(--color-gray-1);
        text-shadow: none;
        flex: 1;
        display: flex;
        justify-content: flex-end;
        margin: 0;
        padding: 0;
      }

      li {
        list-style: none;
      }

      .skip-to-content-link {
        background-color: var(--color-primary-2);
        left: 50%;
        padding: 4px;
        --shift: 3rem;
        top: calc(var(--shift) * -1);
        position: absolute;
        font-weight: bold;
        text-transform: uppercase;
        font-family: var(--font-accent);
        transition: transform 0.2s;
        transform: translate(-50%, 0%);
        white-space: nowrap;
        @media (prefers-reduced-motion: reduce) {
          transition: none;
        }

        &:focus {
          transform: translate(-50%, var(--shift));
        }
      }

      .logo-link {
        text-decoration: none;
        color: initial;
      }

      .nav-link {
        margin: 0;
        font-family: var(--font-accent);
        color: var(--color-gray-12);
        text-decoration: none;
        font-weight: bold;
        display: flex;
        align-items: center;
        justify-content: center;
        height: 100%;
        padding: 0 0.5rem;

        &:hover,
        &:focus,
        &[aria-current="page"]:hover,
        &[aria-current="page"]:focus {
          color: var(--color-primary-11);
        }

        &[aria-current="page"] {
          border-top: 2px solid transparent;
          border-bottom: 2px solid var(--color-primary-11);
        }
      }
    }
  }
</style>
