---
import type { CollectionEntry } from 'astro:content';
import Layout from './Base.astro';
import renderInlineMarkdown from '../utils/renderInlineMarkdown';
import PostDescription from '../components/PostDescription.astro';
export type Props = {
    title: string
    description: string
    ogImagePath: string
    category?: CollectionEntry<'categories'>
}

const { title, description, category, ogImagePath } = Astro.props;

const patternClass = category ? `u-pattern-${category.id}` : '';
---

<Layout title={title} description={description} ogImagePath={ogImagePath} category={category}>
    <h1 class:list={[ 'u-pattern', patternClass ]}>
        <span class="u-guttered">{ title }</span>
    </h1>
    <div class="u-guttered">
        {description &&
            <PostDescription description={description}/>
        }
        <slot></slot>
    </div>
</Layout>