---
import type { CollectionEntry } from 'astro:content';
import Layout from './Base.astro';
import renderInlineMarkdown from '../utils/renderInlineMarkdown';
export type Props = {
    title: string
    description: string
    ogImagePath: string
    category?: CollectionEntry<'categories'>
}

const { title, description, category, ogImagePath } = Astro.props;

const patternClass = category ? `pattern-${category.id}` : '';
---

<Layout title={title} description={description} ogImagePath={ogImagePath}>
    <h1 class:list={[ 'pattern', patternClass ]}>
        <span class="guttered">{ title }</span>
    </h1>
    <div class="guttered">
        {description &&
            <p class="post-description"
                set:html={renderInlineMarkdown(description)}>
            </p>
        }
        <slot></slot>
    </div>
</Layout>