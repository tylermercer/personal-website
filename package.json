{
  "name": "personal-website-eleventy",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "watch:sass-global": "sass  --no-source-map --watch src/sass/style.scss:dist/css/style.css",
    "watch:sass-pages": "sass  --no-source-map --watch src/sass/pages:dist/css",
    "watch:eleventy": "eleventy --serve",
    "build:sass-global": "sass  --no-source-map src/sass/style.scss:dist/css/style.css",
    "build:sass-pages": "sass  --no-source-map src/sass/pages:dist/css",
    "build:eleventy": "eleventy",
    "postbuild": "lightningcss --minify --targets '> 0.25%, not IE 11' dist/css/*.css -o dist/css/*.css",
    "start": "npm-run-all build:sass-global build:sass-pages --parallel watch:*",
    "build": "npm-run-all build:sass-global build:sass-pages build:eleventy"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^1.0.2",
    "lightningcss-cli": "^1.18.0",
    "npm-run-all": "^4.1.5",
    "sass": "^1.57.1"
  }
}
